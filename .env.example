# Copy this file to .env and fill in with your own values.

# SMTP configuration (for email summaries)
FOCUS_SMTP_HOST=smtp.gmail.com
FOCUS_SMTP_PORT=587
FOCUS_SMTP_USERNAME=your_email@gmail.com
FOCUS_SMTP_PASSWORD=your_app_password_here
FOCUS_SMTP_USE_TLS=true
FOCUS_EMAIL_FROM=Focus Sentry <your_email@gmail.com>

# Twilio configuration (for SMS summaries, optional)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1XXXXXXXXXX